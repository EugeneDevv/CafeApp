<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:layout_gravity="center"
    tools:context=".HelpActivity">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="Customer Care"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:id="@+id/img_executive"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_txt"
        android:layout_marginTop="22dp"
        android:src="@mipmap/help_executive" />


    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_mail"
        android:layout_marginTop="17dp"
        android:src="@mipmap/help_call"
         />

    <ImageView
        android:id="@+id/img_mail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/help_mail" />

    <ImageView
        android:id="@+id/img_web"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_mail"
        android:layout_marginTop="17dp"
        android:src="@mipmap/help_web" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_web"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="We are happy to help you"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>